<div id="landing">
  <div id="landing-bg">
    <img src="/static/images/background/1.jpg" width="1920" height="1080" alt="Background image" aria-hidden="true">
  </div>
  <div id="landing-content">
    <h1 id="landing-tagline">
      Discover amazing content
    </h1>
    {% if stats %}
      <div id="stats" class="text-center">
        <p class="stats-stat" id="stat-users">
          <span class="stat-value">{{stats.users}}</span>
          <span class="stat-label">Users</span>
        </p>
        <p class="stats-stat" id="stat-users">
          <span class="stat-value">{{stats.posts}}</span>
          <span class="stat-label">Posts</span>
        </p>
      </div>
    {% endif %}
    <div id="landing-buttons">
      <a href="/login" class="styled-button with-shadow with-text-shadow style-outline">
        Log in
      </a>
      <a href="/register" class="styled-button with-shadow">
        Sign up
      </a>
    </div>
  </div>
</div>
